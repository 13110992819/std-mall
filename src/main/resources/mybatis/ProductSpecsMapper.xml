<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.mall.dao.IProductSpecsDAO">
	<resultMap id="productSpecs_DB_Result" type="productSpecs">
		<result column="code" property="code" />
		<result column="name" property="name" />
		<result column="product_code" property="productCode" />
		<result column="original_price" property="originalPrice" />
		<result column="price1" property="price1" />
		
		<result column="price2" property="price2" />
		<result column="price3" property="price3" />
		<result column="quantity" property="quantity" />
		<result column="order_no" property="orderNo" />
		<result column="company_code" property="companyCode" />
		
		<result column="system_code" property="systemCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="name != null and name != '' ">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="productCode != null and productCode != '' ">
				AND t.product_code = #{productCode}
			</if>
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code = #{companyCode}
			</if>
			<if test="systemCode != null and systemCode != '' ">
				AND t.system_code = #{systemCode}
			</if>
		</trim>
	</sql>
	<select id="select_productSpecs" parameterType="productSpecs" resultMap="productSpecs_DB_Result">
		SELECT
		t.code
		,t.name
		,t.product_code
		,t.original_price
		,t.price1
		
		,t.price2
		,t.price3
		,t.quantity
		,t.order_no
		,t.company_code
		
		,t.system_code
		FROM
		tmall_product_specs t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_productSpecs_count" parameterType="productSpecs"
		resultType="java.lang.Long">
		SELECT count(1) FROM tmall_product_specs t
		<include refid="where_condition" />
	</select>

	<insert id="insert_productSpecs" parameterType="productSpecs">
		INSERT INTO
		tmall_product_specs(
		code
		,name
		,product_code
		,original_price
		,price1
		
		,price2
		,price3
		,quantity
		,order_no
		,company_code
		
		,system_code
		)
		VALUES(
		#{code}
		,#{name}
		,#{productCode}
		,#{originalPrice}
		,#{price1}
		
		,#{price2}
		,#{price3}
		,#{quantity}
		,#{orderNo}
		,#{companyCode}
		
		,#{systemCode}
		)
	</insert>

	<update id="update_productSpecs" parameterType="productSpecs">
		UPDATE tmall_product_specs
		SET
		name = #{name}
		,original_price = #{originalPrice}
		,price1 = #{price1}
		,price2 = #{price2}
		,price3 = #{price3}
		
		,quantity = #{quantity}
		,order_no = #{orderNo}
		WHERE code = #{code}
	</update>

    <delete id="delete_productSpecs" parameterType="productSpecs">
		DELETE FROM
		tmall_product_specs
		WHERE
		code = #{code}
	</delete>

</mapper>