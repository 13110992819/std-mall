<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.mall.dao.IJewelRecordDAO">
	<resultMap id="jewelRecord_DB_Result" type="jewelRecord">
		<result column="code" property="code" />
		<result column="user_id" property="userId" />
		<result column="nickname" property="nickname" />
		<result column="photo" property="photo" />
		<result column="jewel_code" property="jewelCode" />
		<result column="create_datetime" property="createDatetime" />
		<result column="times" property="times" />
		
		<result column="pay_amount1" property="payAmount1" />
		<result column="pay_amount2" property="payAmount2" />
		<result column="pay_amount3" property="payAmount3" />
		
		<result column="status" property="status" />
		<result column="remark" property="remark" />
		<result column="pay_code" property="payCode" />
		<result column="system_code" property="systemCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="jewelCode != null and jewelCode != '' ">
				AND t.jewel_code = #{jewelCode}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="payCode != null and payCode != '' ">
				AND t.pay_code = #{payCode}
			</if>
			<if test="systemCode != null and systemCode != '' ">
				AND t.system_code = #{systemCode}
			</if>
		</trim>
	</sql>
	<select id="select_jewelRecord" parameterType="jewelRecord" resultMap="jewelRecord_DB_Result">
		SELECT
		t.code
		,t.user_id
		,tu.nickname
		,tue.photo
		,t.jewel_code
		,t.create_datetime
		,t.times
		
		,t.pay_amount1
		,t.pay_amount2
		,t.pay_amount3
		,t.status
		,t.remark
		,t.pay_code 
		,t.system_code
		FROM
		tact_jewel_record t LEFT JOIN ${userDB}.tstd_user tu ON t.user_id = tu.user_id LEFT JOIN ${userDB}.tstd_user_ext tue ON tu.user_id = tue.user_id
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_jewelRecord_count" parameterType="jewelRecord"
		resultType="java.lang.Long">
		SELECT count(1) FROM tact_jewel_record t 
		<include refid="where_condition" />
	</select>

	<insert id="insert_jewelRecord" parameterType="jewelRecord">
		INSERT INTO
		tact_jewel_record(
		code
		,user_id
		,jewel_code
		,create_datetime
		,times
		
		,pay_amount1
		,pay_amount2
		,pay_amount3
		,pay_datetime
		,status
		
		,remark
		,system_code
		)
		VALUES(
		#{code}
		,#{userId}
		,#{jewelCode}
		,#{createDatetime}
		,#{times}
		
		,#{payAmount1}
		,#{payAmount2}
		,#{payAmount3}
		,#{payDatetime}
		,#{status}
		
		,#{remark}
		,#{systemCode}
		)
	</insert>
	
	<update id="update_jewelRecord" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		status=#{status}
		<if test="payDatetime != null and payDatetime != '' ">
			 ,pay_datetime = #{payDatetime}
		</if>
		,remark=#{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_jewelRecordPayAmount" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		status=#{status}
		,pay_amount1 = #{payAmount1}
		,pay_amount2 = #{payAmount2}
		,pay_amount3 = #{payAmount3}
		,pay_datetime = #{payDatetime}
		,remark=#{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_lostInfo" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		status=#{status}
		,remark=#{remark}
		WHERE jewel_code = #{jewelCode} and code != #{code}
	</update>
	
	<update id="update_times" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		times=#{times}
		WHERE code = #{code}
	</update>
	
</mapper>
