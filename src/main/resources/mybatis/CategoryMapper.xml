<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.mall.dao.ICategoryDAO">
	<resultMap id="category_DB_Result" type="category">
		<result column="code" property="code" />
		<result column="parent_code" property="parentCode" />
		<result column="name" property="name" />
		<result column="pic" property="pic" />
		<result column="order_no" property="orderNo" />
		<result column="company_code" property="companyCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="parentCode != null and parentCode != '' ">
				AND t.parent_code = #{parentCode}
			</if>
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code = #{companyCode}
			</if>
		</trim>
	</sql>
	<select id="select_category" parameterType="category" resultMap="category_DB_Result">
		SELECT
		t.code
		,t.user_id
		,t.product_code
		,t.quantity
		,tp.name product_name
		,tp.adv_pic adv_pic
		,tp.discount_price sale_price
		FROM
		tmall_category t INNER JOIN tmall_product tp ON t.product_code = tp.code
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_category_count" parameterType="category"
		resultType="java.lang.Long">
		SELECT count(1) FROM tmall_category t INNER JOIN tmall_product tp ON t.product_code = tp.code
		<include refid="where_condition" />
	</select>

	<insert id="insert_category" parameterType="category">
		INSERT INTO
		tmall_category(
		code
		,user_id
		,product_code
		,quantity
		)
		VALUES(
		#{code}
		,#{userId}
		,#{productCode}
		,#{quantity}
		)
	</insert>
	
	<update id="update_category" parameterType="category">
		UPDATE tmall_category
		SET
		quantity = #{quantity}
		WHERE code = #{code}
	</update>
	
	<delete id="delete_category" parameterType="category">
		DELETE FROM
		tmall_category
		WHERE
		code = #{code}
	</delete>
</mapper>
